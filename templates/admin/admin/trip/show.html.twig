        <a class="btn btn-info btn-sm floatright" href="{{ path('admin_trip_index') }}"><i class="fa fa-arrow-left"></i>back to list</a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ trip.title }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ trip.keywords }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trip.description }}</td>
            </tr>
