            </tr>
            <tr>
                <th>Price</th>
                <td>{{ trip.price }}</td>
            </tr>
        </tbody>
    </table>



    <a class="btn-sm btn btn-success floatleft" href="{{ path('admin_trip_edit', {'id': trip.id}) }}"><i class="fa fa-edit"></i>edit</a>

