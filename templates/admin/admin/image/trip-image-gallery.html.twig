{% extends('admin/admin/image/image-base.html.twig') %}
{% block body %}
    <div class="container">
        <div>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for image in images %}
                    <tr>
                        <th scope="row">{{ image.id }}</th>
                        <td><img src="{{ asset('uploads/image/' ~ image.image) }}" alt="" width="75px" height="50px"></td>
                        <td>
                            <form method="post" action="{{ path('trip_image_delete', {'trip_id': trip.id, 'id': image.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                                <button class="btn btn-sm btn-danger floatright">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}