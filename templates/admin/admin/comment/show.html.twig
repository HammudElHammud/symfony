{% extends('adminBase.html.twig') %}


{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>
    <a class="btn btn-info btn-sm floatright" href="{{ path('comment_index') }}"> <i class="fa fa-arrow-left"></i>back to list</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>Commented_at</th>
                <td>{{ comment.commentedAt ? comment.commentedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>



    <a class="btn-sm btn btn-success floatleft" href="{{ path('comment_edit', {'id': comment.id}) }}"> <i class="fa fa-edit"></i>edit</a>

    {{ include('admin/admin/comment/_delete_form.html.twig') }}
{% endblock %}
