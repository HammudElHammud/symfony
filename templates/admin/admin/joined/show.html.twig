{% extends('adminBase.html.twig') %}
{% block title %}{{ joined.trip.title }}{% endblock %}

{% block body %}
    <h1>Joined</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ joined.id }}</td>
            </tr>
            <tr>
                <th>Trip Name</th>
                <td>{{ joined.trip.title }}</td>
            </tr>
            <tr>
                <th>Trip Price</th>
                <td>{{ joined.trip.price }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ joined.user.name }}</td>
            </tr>
            <tr>
                <th>Added_at</th>
                <td>{{ joined.addedAt ? joined.addedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ joined.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('joined_index') }}">back to list</a>

    <a href="{{ path('joined_edit', {'id': joined.id}) }}">edit</a>

    {{ include('admin/admin/joined/_delete_form.html.twig') }}
{% endblock %}
