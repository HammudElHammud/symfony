{% extends('adminBase.html.twig') %}


{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
{#                <th>Password</th>#}
                <th>Name</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
{#                <td>{{ user.password }}</td>#}
                <td>{{ user.name }}</td>
                <td>{{ user.status }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('admin_user_show', {'id': user.id}) }}"> <i
                                class="fa fa-eye"> </i>show</a></td>
                <td>
                    <a class="btn btn-info" href="{{ path('admin_user_edit', {'id': user.id}) }}"> <i
                                class="fa fa-edit"></i> edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-sm btn-primary" href="{{ path('admin_user_new') }}"> <i class="fa fa-newspaper-o " ></i>  Create new</a>
{% endblock %}
