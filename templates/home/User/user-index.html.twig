{% extends('admin/homeBase.html.twig') %}

{% block body %}
    {% include('home/User/user-upper.html.twig') %}
        <div class="container">
            <div class="col col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="">
                            General Setting
                        </div>
                    </div>
                    <div class="card-body">
                        <h5>Change Username</h5>
                        <form action="?task=username" method="post" class="">
                            <div class="form-group">
                                <label for="">Username</label>
                                <input class="form-control" type="text" name="user[name]" value="{{ app.user.username }}">
                            </div>
                            <input type="submit" value="Change Name" class="btn btn-success">
                        </form>
                        <br>
                        <hr>
                        <h5>Change Password</h5>
                        <form action="?task=password" method="post" class="">
                            <div class="form-group">
                                <label for="">New Password</label>
                                <input class="form-control" type="password" name="user[password]">
                            </div>
                            <div class="form-group">
                                <label for="">ReType New Password</label>
                                <input class="form-control" type="password" name="repassword">
                            </div>
                            <input type="submit" value="Change Password" class="btn btn-success">
                        </form>

                    </div>
                </div>
            </div>
        </div>
    {% include('home/User/user-lower.html.twig') %}
{% endblock %}